<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attendance_location_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.location.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="field[@name='check_in']" position="after">
                <field name="check_in_source"/>
                <field name="check_in_location"/>
                <button name="check_in_map_button" type="object"
                        class="btn btn-sm btn-link mb6 fa fa-globe"/>
            </xpath>
            <xpath expr="field[@name='check_out']" position="after">
                <field name="check_out_source"/>
                <field name="check_out_location"/>
                <button name="check_out_map_button" type="object"
                        class="btn btn-sm btn-link mb4 fa fa-globe" attrs="{'invisible': [('check_out', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>